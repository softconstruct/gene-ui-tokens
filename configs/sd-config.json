{
    "source": ["./tokens/*.json"],
    "platforms": {
        "css": {
            "transformGroup": "css",
            "buildPath": "./dist/css/",
            "prefix": "GUIT",
            "files": [
                {
                    "destination": "tokens.css",
                    "format": "css/variables",
                    "options": {
                        "outputReferences": true
                    }
                }
            ]
        },
        "js": {
            "transformGroup": "js",
            "buildPath": "./dist/js/",
            "prefix": "GUIT",
            "files": [
                {
                    "destination": "tokens.js",
                    "format": "javascript/es6"
                }
            ]
        }
    }
}
